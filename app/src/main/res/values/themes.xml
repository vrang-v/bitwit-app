<resources>

    <style name="Bitwit" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorBasic</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="android:textCursorDrawable">@color/black</item>
        <item name="android:colorEdgeEffect">@color/black</item>
    </style>

    <style name="MyTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/colorBasic</item>
        <item name="colorPrimaryDark">@color/colorAccentLight</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Bitwit.Fullscreen" parent="Bitwit">
        <item name="android:actionBarStyle">@style/Widget.Bitwit.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Bitwit.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="Bitwit.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Bitwit.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Bitwit.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
